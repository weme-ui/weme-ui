{
  "$schema": "https://weme-ui.github.io/schema/project.schema.json",
  "repos": [
    {
      "repo": "https://github.com/weme-ui/weme-ui",
      "registry": "weme-ui/std",
      "prefix": "ui",
      "default": true,
      "version": "0.1.5"
    }
  ],
  "paths": {
    "components": "~/components",
    "composables": "~/composables"
  },
  "unocss": {
    "cssVars": {
      "card-bg": "white.12",
      "overlay-bg": "black.11",
      "item-group-bg": "white.12",
      "toast-width": "24rem",
      "tooltip-bg": "primary.9",
      "tooltip-fg": "primary.1",
      "popover-bg": "neutral.1",
      "action-sheet-bg": "neutral.1",
      "modal-bg": "neutral.1",
      "modal-width": "24rem",
      "modal-height": "12rem",
      "dropdown-bg": "white.12",
      "meter-weak-color": "danger.9",
      "meter-medium-color": "warning.8",
      "meter-strong-color": "success.8"
    }
  }
}
