{
  "name": "weme-ui",
  "type": "module",
  "version": "0.1.0",
  "private": true,
  "packageManager": "pnpm@10.20.0",
  "author": "Allen Luo <luoyi@mouji.net>",
  "license": "MIT",
  "homepage": "https://github.com/weme-ui/weme-ui",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/weme-ui/weme-ui.git"
  },
  "bugs": {
    "url": "https://github.com/weme-ui/weme-ui/issues"
  },
  "engines": {
    "node": ">=22.14.0",
    "pnpm": ">=10.13.0"
  },
  "scripts": {
    "build": "premove packages/*/dist && pnpm -r dev:prepare && pnpm --filter @weme-ui/* build && weme-ui build",
    "dev": "pnpm dev:prepare && pnpm -C docs dev",
    "dev:prepare": "pnpm -r dev:prepare",
    "lint": "eslint .",
    "test": "vitest",
    "typecheck": "pnpm -r typecheck",
    "release": "bumpp -r --excute=\"pnpm i\"",
    "changelog": "changelogen --output CHANGELOG.md",
    "taze": "taze major -I -r",
    "commit": "czg"
  },
  "devDependencies": {
    "@antfu/eslint-config": "catalog:build",
    "@commitlint/cli": "catalog:build",
    "@commitlint/config-conventional": "catalog:build",
    "@typescript/native-preview": "catalog:build",
    "@weme-ui/weme-ui": "workspace:*",
    "bumpp": "catalog:build",
    "changelogen": "catalog:build",
    "commitizen": "catalog:build",
    "cz-git": "catalog:build",
    "czg": "catalog:build",
    "eslint": "catalog:build",
    "eslint-plugin-pnpm": "catalog:build",
    "jsonc-eslint-parser": "catalog:build",
    "lint-staged": "catalog:build",
    "premove": "catalog:build",
    "simple-git-hooks": "catalog:build",
    "taze": "catalog:build",
    "typescript": "catalog:build",
    "yaml-eslint-parser": "catalog:build"
  },
  "simple-git-hooks": {
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.{vue,ts,tsx,mjs,cjs}": "eslint --fix"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-git"
    }
  }
}
