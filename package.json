{
  "name": "weme-ui",
  "type": "module",
  "version": "0.1.5",
  "private": true,
  "packageManager": "pnpm@10.26.1",
  "author": "Allen Luo <luoyi@mouji.net>",
  "license": "MIT",
  "homepage": "https://github.com/weme-ui/weme-ui",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/weme-ui/weme-ui.git"
  },
  "bugs": {
    "url": "https://github.com/weme-ui/weme-ui/issues"
  },
  "engines": {
    "node": ">=22.14.0",
    "pnpm": ">=10.13.0"
  },
  "scripts": {
    "build": "pnpm build:clean && pnpm dev:prepare && pnpm --filter @weme-ui/* build",
    "build:clean": "premove docs/.nuxt packages/*/dist packages/*/.nuxt",
    "build:registry": "pnpm cli build && git add . && git commit -m 'chore: build registry'",
    "dev": "pnpm -C docs dev",
    "dev:prepare": "pnpm -r dev:prepare",
    "lint": "eslint .",
    "test": "vitest",
    "typecheck": "pnpm -r typecheck",
    "cli": "weme-ui",
    "release": "bumpp -r --execute=\"pnpm i\"",
    "changelog": "changelogen --output CHANGELOG.md",
    "version": "pnpm build:registry",
    "prepublishOnly": "pnpm build",
    "taze": "taze major -I -r",
    "commit": "czg"
  },
  "devDependencies": {
    "@antfu/eslint-config": "catalog:",
    "@commitlint/cli": "catalog:",
    "@commitlint/config-conventional": "catalog:",
    "@typescript/native-preview": "catalog:",
    "@weme-ui/weme-ui": "workspace:*",
    "bumpp": "catalog:",
    "changelogen": "catalog:",
    "commitizen": "catalog:",
    "cz-git": "catalog:",
    "czg": "catalog:",
    "eslint": "catalog:",
    "eslint-plugin-pnpm": "catalog:",
    "jsonc-eslint-parser": "catalog:",
    "lint-staged": "catalog:",
    "premove": "catalog:",
    "simple-git-hooks": "catalog:",
    "taze": "catalog:",
    "typescript": "catalog:",
    "vitest": "catalog:",
    "yaml-eslint-parser": "catalog:"
  },
  "simple-git-hooks": {
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.{vue,ts,tsx,mjs,cjs}": "eslint --fix"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-git"
    }
  }
}
