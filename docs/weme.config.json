{
  "$schema": "https://weme-ui.github.io/schema/project.schema.json",
  "repos": [
    {
      "repo": "weme-ui/weme-ui",
      "registry": "weme-ui/std",
      "default": false,
      "prefix": "ui"
    }
  ],
  "paths": {
    "components": "~/components",
    "composables": "~/composables",
    "layouts": "~/layouts",
    "pages": "~/pages",
    "plugins": "~/plugins",
    "themes": "~/themes",
    "types": "~/types",
    "utils": "~/utils"
  },
  "unocss": {
    "variablePrefix": "ui",
    "cssVars": {
      "toast-bg": "color.neutral.1",
      "toast-ring": "color.neutral.1",
      "toast-width": "24rem",
      "tooltip-bg": "color.neutral.11",
      "tooltip-fg": "color.neutral.1"
    }
  }
}
